<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F8FA"
        android:orientation="vertical"
        tools:context=".activities.MyWalletActivity">

        <include
            android:id="@+id/myToolbar"
            layout="@layout/toolbar" />


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_24"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMyBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_1"
                app:cardCornerRadius="@dimen/dp_8"
                app:cardElevation="@dimen/dp_2"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_16">

                    <ImageView
                        android:id="@+id/ivIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_wallet" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_toEndOf="@+id/ivIncome"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/rubik_regular"
                                android:text="@string/balance"
                                android:textColor="@color/colorDarkBlack"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tvAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_4"
                                android:ellipsize="end"
                                android:fontFamily="@font/rubik_bold"
                                android:includeFontPadding="false"
                                android:letterSpacing="0"
                                android:singleLine="true"
                                android:text="$0.00"
                                android:textColor="@color/colorDarkBlack"
                                android:textSize="20sp"
                                android:visibility="visible" />

                            <!--
                                                                        <TextView
                                                                            android:id="@+id/tvPaynow"
                                                                            android:layout_width="wrap_content"
                                                                            android:layout_height="wrap_content"
                                                                            android:layout_alignParentEnd="true"
                                                                            android:fontFamily="@font/rubik_medium"
                                                                            android:text="@string/pay_now"
                                                                            android:visibility="gone"
                                                                            android:textColor="@color/colorDarkBlack"
                                                                            android:textSize="14sp" />
                            -->


                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tvPaynow"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_32"
                            android:layout_alignParentEnd="true"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/pay_now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="14sp"
                            android:visibility="gone" />


                    </RelativeLayout>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvNegetive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:backgroundTint="#CFFFF1"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/dp_6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_16">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rubik_regular"
                            android:lineHeight="@dimen/dp_22"
                            android:text="@string/you_have_reached_the_maximum_negative_balance_allowed_pay_it_to_be_able_to_be_hired"
                            android:textColor="@color/colorDarkBlack"
                            android:textSize="14sp" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPayNow"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="@dimen/dp_160"
                            android:layout_height="@dimen/dp_36"
                            android:layout_marginTop="@dimen/dp_16"
                            android:backgroundTint="@color/color_primary"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@string/pay_now"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"
                            android:visibility="visible" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_30"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/transaction_history"
                    android:textColor="@color/colorGray"
                    android:textSize="18sp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:overScrollMode="never" />

                <LinearLayout
                    android:id="@+id/llNoLising"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:background="@drawable/bg_dashed_border"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_nolist_post_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:fontFamily="@font/rubik_medium"
                        android:text="Sin Transacciones"
                        android:textColor="#484848"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>